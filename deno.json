{
    "tasks": {
        "build": "deno run -A ./dnt.ts",
        "npm": "deno task build && deno task pub-npm",
        "pub-npm": "cd npm && npm publish --access public",
        "pub": "deno publish --allow-slow-types"
    },
    "compilerOptions": {
        "lib": [
            "deno.window",
            "dom",
            "ESNext"
        ]
    },
    "workspace": [
        "flow",
        "util"
    ],
    "exclude": [
        ".npm"
    ],
    "fmt": {
        "lineWidth": 120
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any",
                "ban-ts-comment"
            ]
        }
    },
    "imports": {
        "@deno/dnt": "jsr:@deno/dnt@^0.41.3"
    }
}